{
    // TODO: convert these to grunt tasks or something
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MissileKite compile",
            "type": "typescript",
            "tsconfig": "MissileKite/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "MissileKite output",
            "type": "shell",
            "command": "sed",
            "args": [
                "-i",
                "s/var //g",
                "MissileKite/bot.js"
            ],
            "group": "build",
            "dependsOn": [
                "MissileKite compile"
            ]
        },
        {
            "label": "ZapKite compile",
            "type": "typescript",
            "tsconfig": "ZapKite/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "ZapKite output",
            "type": "shell",
            "command": "sed",
            "args": [
                "-i",
                "s/var //g",
                "ZapKite/bot.js"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "ZapKite compile"
            ]
        }
    ]
}